mode "projector" {
	bindsym Escape mode default
	bindsym Return mode default

	bindsym l exec ~/.screenlayout/left.sh
	bindsym d exec ~/.screenlayout/default.sh
	bindsym r exec ~/.screenlayout/right.sh
	bindsym e exec pacmd set-default-sink 0
	bindsym i exec pacmd set-default-sink 1
}
bindsym $mod+p mode "projector"

mode "open" {
	bindsym Escape mode default
	bindsym Return mode default

	bindsym r exec urxvt -e ranger
	bindsym c exec google-chrome-stable
	bindsym t exec urxvt -e geeknote edit --note "ToDo"
	bindsym w exec gksudo wireshark-gtk
}
bindsym $mod+o mode "open"
